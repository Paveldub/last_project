mixin herocenter(className, titleText, descTitle, textSize)
    div(class=`form-about__img form-about--${className}`)
        img.form-about__pic(src="./assets/img/my-photo.jpg" alt="photo")
        div(class=`form-about__desc form-about--${textSize}`)
            h2 #{titleText}
            h5 #{descTitle}

mixin triangle(className)
    svg(class=`triangle__svg triangle__svg--${className}` xmlns='http://www.w3.org/2000/svg', viewbox='0 0 1000 85', preserveaspectratio='none')
        polygon.left(points='0,0   0,86   500.8,86   500.8,75.5')
        polygon.right(points='1000,0   1000,86   500,86   500,75.5')

mixin background(className, img)
    div(class=`portfolio-img portfolio-img--${className}`)
        svg(class=`portfolio-pic portfolio-pic--${className}`)
            use(xlink:href=`./assets/img/sprite.svg#${img}`)

mixin socials(className, item)
    div(class=`socials socials--${className}`)
        ul.socials__list
            each item in socials 
                li.socials__item
                    a.socials__link(href=`${item.link}` target="_blank")
                        svg.socials__icon
                            use(xlink:href=`./assets/img/sprite.svg#${item.img}`)
