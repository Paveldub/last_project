mixin title(titleName, className, size, titleImg, margin, titleText)
    div(class=`title title--${titleName}`)
        div(class=`title-about__img title-about__img--${className}`)
            svg(class=`title-about__pic title-about__pic--${className}`)
                use(xlink:href=`./assets/img/sprite.svg#${titleImg}`)
        .title-about__text
            h2 #{titleText}

mixin title-small(className, titleText)
    div(class=`${className}`)
        h3 #{titleText}

mixin arrow(className, link, position)
    div(class=`arrow-down arrow-down--${className}`)
        a.arrow-down__link(href=`${link}`)
            svg(class=`arrow-down__pic arrow-down__pic--${position}`)
                use(xlink:href="./assets/img/sprite.svg#arrow_down")

mixin title-rumorous(className, titleText, clear, titleImg)
    div(class=`title-rumorous title-rumorous--${className}`)
        h3 #{titleText}
        div(class=`title-rumorous__pic title-rumorous__pic--${clear}`)
            svg.title-rumorous__svg
                use(xlink:href=`./assets/img/sprite.svg#${titleImg}`)

