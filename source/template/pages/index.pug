extends ../_template

block variables 
    - var title = "Main page"

block content
    .preloader#page-preloader
        .loader
        span#load-perc.loader-percentage(<='', span='') 0%
    .wrapper.visually-hidden
        .parallax#parallax.visually-hidden
            - for(i=1; i < 10; i++)
                .parallax__layer
                    img(src=`./assets/img/layer-${i}.png`).parallax-img
        include ../layout/index/sign_up
        .flip-container
            .flipper#flipper
                .front
                    .form-about
                        +herocenter('padding', 'Pavel Demidovich', 'Personal website')
                        .navigation-items
                             +socials
                        .navigation-buttons
                            +buttons('buttons', ["My works", "About me", "Blog"])
                .back
                    include ../layout/login/login
        .copyright
            p &copy; Pavel Demidovich | 2018

    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
    script(src="./assets/js/flexibility.js")
    script(src="./assets/js/index.js")  
    script(src="./assets/js/parallax.js")  
         
